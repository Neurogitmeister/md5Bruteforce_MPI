{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Test serial",
            "type": "shell",
            "command": [
                "gcc -Wall -o bin/md5single source/main/md5_breaker_serial.c -lcrypto -lm",
                "&& ./bin/md5single 79ec16df80b57696a03bb364410061f3 a-z  4"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build and Run Test MPI",
            "type": "shell",
            "command": [
                // "mpicc -Wall -o bin/md5parallel source/main/md5_breaker_parallel.c -lcrypto -lm",
                "mpiexec -np 2 ./bin/md5parallel 79ec16df80b57696a03bb364410061f3 a 23",
                "&& lscpu | grep 'МГц'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build MPI V4",
            "type": "shell",
            "command": "mpicc -Wall -o md5parallel4 parallel_new4.c -lcrypto -lm"
        },
        {
            "label": "Run MPI",
            "type": "shell",
            "command": [
                "mpiexec -np 4 ./bin/md5parallel 79ec16df80b57696a03bb364410061f3 a 23",
                "&& lscpu | grep 'МГц'"
            ],

            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}